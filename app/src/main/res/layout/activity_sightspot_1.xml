<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_row="2"
        android:layout_column="3"
        android:id="@+id/morning"
        android:layout_gravity="top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Morning"
            android:id="@+id/m_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/m_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/m_textView"
            android:layout_toLeftOf="@+id/m_searchView"
            android:layout_toStartOf="@+id/m_searchView" />

        <ImageButton
            android:id="@+id/m_searchView"
            android:layout_width="50dp"         
            android:layout_height="50dp"
            android:background="@drawable/search"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/m_textView" />

        <Button
            android:id="@+id/button_transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Transit" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_row="2"
        android:layout_column="2"
        android:id="@+id/aternoon"
        android:layout_below="@+id/morning"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Afternoon"
            android:id="@+id/a_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a_textView2"
            android:layout_below="@+id/a_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/a_searchView"
            android:layout_toStartOf="@+id/a_searchView" />

        <ImageButton
            android:layout_width="50dp"         
            android:layout_height="50dp"
            android:background="@drawable/search"
            android:id="@+id/a_searchView"
            android:layout_below="@+id/a_textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/button_transit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Transit" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_below="@+id/aternoon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/night">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Night"
            android:id="@+id/n_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/n_textView2"
            android:layout_below="@+id/n_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/n_searchView"
            android:layout_toStartOf="@+id/n_searchView" />

        <ImageButton
            android:layout_width="50dp"         
            android:layout_height="50dp"
            android:background="@drawable/search"
            android:id="@+id/n_searchView"
            android:layout_below="@+id/n_textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    
    <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_below="@+id/night"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true"
          android:id="@+id/map" >

            <Button
                android:id="@+id/button_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Map View" />
          
    </RelativeLayout>
</RelativeLayout>
